const GearsApp = new function() {
    
    let that = this;

    const pageStore = {
        // TODO: load from DB
        'dashboard': {
            url: '<?= route_url('/dashboard') ?>',
            options: {}
        },
        'test': {            
            url: '<?= route_url('/test') ?>',
